@model BookServiceModel

<div class="col-md-4"> 
    <div class="card mb-3"> 
        <img class="card-img-top" src="@Model.ImageUrl" alt="Book Image"> 
        <div class="card-body text-center">
            <h4>@Model.Title</h4>
         <h4 class="blog_date">
           <p class="font-italic font-weight-bold">@string.Join(", ", @Model.BookAuthors)</p>
         </h4>
         <h6 class="font-italic font-weight-bold">@string.Join(", ", @Model.BookGenres)</h6>
            <p>
                @Model.Description.Substring(0, 150)...
            </p>
             <a asp-controller="Book" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary btn-lg"
                   role="button">Read More</a>

            @if (User.IsInRole("Administrator"))
            {
                            <a asp-controller="Book" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-lg"
                   role="button">Edit</a>
                            <a asp-controller="Book" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-primary btn-lg"
                   role="button">Delete</a>
            }
        </div>
    </div>
</div>


