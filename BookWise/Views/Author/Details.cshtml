@using System.Globalization;
@using BookWise.Core.Models.Author;
@model AuthorDetailsModel
@{
    ViewBag.Title = "About the author";
    bool first = true;
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<style>
    .book-item {
        display: inline-block; 
        width: 300px; 
        margin: 10px; 
    }

        .book-item img {
            width: 300px; 
            height: 500px; 
            object-fit: cover; 
        }
</style>

<div class="container" style="display:inline">
    <div class="row">
        <div class="col-4">
            <img class="card-img-top" style="width: 25rem"
                 src="@Model.ImageUrl" alt="Author Image">
        </div>
        <div class="card col-8 border-0">
            <h2>
                <i>@Model.FirstName @Model.LastName</i>
            </h2>
            <p>
                <b> Birth Date: </b> <time>@(Model.BirthDate.HasValue ? Model.BirthDate.Value.ToString("MMMM dd, yyyy", new CultureInfo("en-US")) : "")</time>
            </p>
            <p>@Model.Description</p>

        </div>
    </div>
 </div>
      </br>
         <h4>Author's Books:</h4>
              <ul>
                @foreach (var book in Model.Books)
                {
                <div class="book-item">
                    <img class="img-thumbnail" src="@book.ImageUrl" alt="Book Image">
                   <div class="text-center">
                       <h5>
                            <a class="btn btn-primary" asp-controller="Book" asp-action="Details"
                       asp-route-id="@book.Id"> @book.Title</a>
                        </h5>
                    </div>
                </div>
                }
              </ul>
       

