@using BookWise.Core.Models.Author;
@using System.Globalization;
@model IEnumerable<AuthorFullModel>

<div class="row">

    @foreach (var author in Model)
    {
        <div class="col-md-4">
                <div class="card mb-3">
                <img class="card-img-top" src="@author.ImageUrl" style="height: 470px; width:405px;" alt="@author.FirstName">
                <div class="card-body text-center">
                    <h4 class="blog_date">
                        <p class="font-italic font-weight-bold">@string.Join(" ", author.FirstName,author.LastName)</p>
                    </h4>
                    <a asp-controller="Author" asp-action="Details" asp-route-id="@author.Id" class="btn btn-primary btn-lg"
                   role="button">Read More</a>
                 @if (User.IsInRole("Administrator"))
                {
                    <a asp-controller="Author" asp-action="Edit" asp-route-id="@author.Id" class="btn btn-primary btn-lg"
                   role="button">Edit</a>
                }
                </div>
            </div>
        </div>
    }
</div>