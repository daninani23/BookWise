                        </a>
                        <a asp-controller="Books" asp-action="Delete" asp-route-id="@book.Id">
                            Delete
                        </a>
                        <a asp-controller="Books" asp-action="ById" asp-route-id="@book.Id">
                            Read More
                        </a>
                    }*@
                </div>
            </div>
        </div>
