@using Microsoft.AspNetCore.Identity
@using BookWise.Infrastructure.Data.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <form class="form-inline" asp-area="User" asp-page="/Account/Logout" asp-route-id="@UserManager.GetUserId(User)">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="User" asp-page="/Identity/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="User" asp-page="/Identity/Account/Login">Login</a>
    </li>
}
</ul>
